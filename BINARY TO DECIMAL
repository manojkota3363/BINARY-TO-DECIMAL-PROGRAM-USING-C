#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n,i,c,g,count=0,a,f=1,m=1;
    printf("enter n\n");
    scanf("%d",&n);
    while(n!=0)
    {
        c=n%10;
        n=n/10;
        printf("c=%d\n",c);
        count=count+(c*m);

        m=m*2;

    }
    printf("decimal value=%d",count);

    return 0;
}
